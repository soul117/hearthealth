<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/content_activity_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context="ua.com.crosp.solutions.hearthealthmonitor.module.modeslist.presentation.view.ModesListFragment">

        <ua.com.crosp.solutions.hearthealthmonitor.common.view.IconDescriptionView
            android:id="@+id/icon_description_experiment_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:idvDescription="Description"
            app:idvIcon="{hm-id-card}"
            app:idvIconColor="@color/deep_blue"
            app:idvIconTextSize="14sp"
            app:idvTitle="@string/text_id"/>


        <ua.com.crosp.solutions.hearthealthmonitor.common.view.IconDescriptionView
            android:id="@+id/icon_description_experiment_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon_description_experiment_id"
            app:idvDescription="Description"
            app:idvIcon="{hm-cardiogram}"
            app:idvIconColor="@color/deep_blue"
            app:idvIconTextSize="14sp"
            app:idvTitle="@string/text_name"/>

        <ua.com.crosp.solutions.hearthealthmonitor.common.view.IconDescriptionView
            android:id="@+id/icon_description_experiment_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon_description_experiment_name"
            app:idvDescription="Description"
            app:idvIcon="{hm-calendar}"
            app:idvIconColor="@color/deep_blue"
            app:idvIconTextSize="14sp"
            app:idvTitle="@string/text_date"/>

        <com.joanzapata.iconify.widget.IconButton
            android:id="@+id/icon_button_generate_pdf_report"
            style="@style/ButtonMaterialIcon.Blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon_description_experiment_date"
            android:layout_margin="7dp"
            android:text="@string/title_button_icon_generate_pdf_report"
            android:textSize="20sp"
            />

        <com.joanzapata.iconify.widget.IconButton
            android:id="@+id/icon_button_generate_xml_report"
            style="@style/ButtonMaterialIcon.Blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon_button_generate_pdf_report"
            android:layout_margin="7dp"
            android:text="@string/title_button_icon_generate_xml_report"
            android:textSize="20sp"
            />

        <com.joanzapata.iconify.widget.IconButton
            android:id="@+id/icon_button_sync_cloud"
            style="@style/ButtonMaterialIcon.Blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon_button_generate_xml_report"
            android:layout_margin="7dp"
            android:text="@string/title_button_icon_sync_cloud"
            android:textSize="20sp"
            />
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>